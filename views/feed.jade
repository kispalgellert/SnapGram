  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    title SnapGram Seng 513 Project
    // Bootstrap core CSS
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    // Add custom CSS here
    
  body
    - var name = userName ? userName : 'User'
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='') SnapGram
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            //
               <li class="active"><a href="#">Home</a></li> 
                          <li><a href="#about">About</a></li>  
            li
              a(href='/users/'+sessionID) #{userName}
            li
              a(href='/feed') Feed
            li
              a(href='/photos/new') Upload
          form.navbar-form.navbar-right(role='form', action='http://localhost:1337/signout', method='get')
            button.btn.btn-primary(type='submit') Sign out
        // /.navbar-collapse
    .container
      // Example row of columns
      .row
          br
          br
          h2 #{userName+"'s Feed"}
      .row
        - if (images[0] == '')
          | No Images!
        - else
          - for (var i=0; i<images.length; i++){
            a(href='/photos/'+images[i])
              img.img-responsive(src=''+images[i])
            p
              | Uploaded by 
              a(href='/users/'+streamID[i]) #{users[i]}
              |  #{times[i]}
        -  }
      .row
      hr
      footer
        p &copy; Company 2014
