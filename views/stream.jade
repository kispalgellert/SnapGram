  body
    - var name = user ? user : 'User'
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='') SnapGram
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/users/' + currentUId) #{navUser}
            li
              a(href='/feed') Feed
            li
              a(href='/photos/new') Upload
          form.navbar-form.navbar-right(role='form', action='http://localhost:1337/signout', method='get')
            button.btn.btn-primary(type='submit') Sign out
        // /.navbar-collapse
    .container
      // Example row of columns
      .row
        .col-md-4
          br
          br
          h2 #{userName+"'s Stream"} 
          - if (following == 99){
            p
          - }
          - else if (following == 0) {
            a.btn.btn-info(href='http://localhost:1337/users/' + userId + '/follow', role='button') Follow
          - }
          - else if (following == 1){
            a.btn.btn-success(href='http://localhost:1337/users/' + userId + '/unfollow', role='button') Following
          - }
          else 
            p
          p
          br
      .row-center
      - if (images[0] == '')
        | No Images!
      - else
        - for(var i = 0;i<images.length;i++){
            img.img-responsive(src='http://localhost:1337/'+images[i])
            p
              | Uploaded by 
              a(href='/users/'+userId) #{userName}
              |  #{times[i]}
        -  }
      .row-center
      hr
      footer
        p &copy; Company 2014
